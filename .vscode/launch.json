    "version": "0.2.0",
    "configurations": [
        {
            "name": "Violonist.exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/violonist/violonist.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "plot_waveform.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/violonist/plot_waveform.py",
            "args": [
                "${workspaceFolder}/outputs",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Instrument Player",
            "type": "cppdbg",
            "MIMode": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/player/player.exe",
            "args": [
                "-m",
                "1"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "internalConsole",
            "windows": {
                "type": "cppvsdbg"
            },
            "osx": {
                "type": "cppdbg",
                "externalConsole": false,
                "MIMode": "lldb"
            }
        },
        {
            "name": "(lldb) Instrument Player",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/player/player",
            "args": [
                "-m",
                "0"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/libdsp_tests",
            "args": [
                "--gtest_filter=BasicOscillatorsTest.*",
                "--gtest_break_on_failure"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/libdsp_tests.exe",
            "args": [
                "--gtest_filter=WaveguideGatesTest.SineWave"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Debug Resampler.exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/resampler.exe",
            "args": [
                "-f",
                "${workspaceFolder}/waves/chirp.wav",
                "-t",
                "44100",
                "-o",
                "out.wav"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Debug AudioTest.exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/audio_test/effect_player.exe",
            "args": [
                "-t",
                "7"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(lldb) effect_player",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/effect_player",
            "args": [
                "-t",
                "8"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        }
    ]
}